	include ../../_inc/_parts/_scd_mainvisual
	// breadcrumbs
	include ../../_inc/_parts/_breadcrumbs
	
	// link
	include ../../_inc/_parts/_pattern/_link
	// type
	include ../../_inc/_parts/_pattern/_type

	// end Content
						
block script
	script.
